<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/viewItemIconImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/viewItemDescriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/viewItemIconImg"
        android:text="Coca"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/viewItemValueTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewItemDescriptionTv"
        android:layout_toEndOf="@id/viewItemIconImg"
        android:text="R$10,00"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/viewItemIconImg"
        android:background="#9C9C9C"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>